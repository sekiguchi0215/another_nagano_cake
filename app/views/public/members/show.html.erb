<div class="row">
	<h2 class="mypage">
		<i class="fas fa-user"></i>マイページ
	</h2>

	<p class="under_mypage">
		<strong>登録情報</strong>
		<%= link_to "編集する", edit_public_member_path(@member.id), class: "btn btn-primary mapage_edit" %>
		<%= link_to "パスワードを変更する", edit_member_registration_path, class: "btn btn-primary" %>
	</p>
</div>
<div class="row">
	<div class="col-xs-8">
		<table class="table table-bordere">
			<tr>
				<td>氏名</td>
				<td><%= @member.first_name %><%= @member.last_name %></td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td><%= @member.first_name_kana %><%= @member.last_name_kana %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td><%= @member.postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td><%= @member.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td><%= @member.phone_number %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td><%= @member.email %></td>
			</tr>
		</table>
	</div><br><br>
</div>
<p>
	<strong>配送先</strong>
	<%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary" %>
</p>
<p>
	<strong>注文履歴</strong>
	<%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %>
</p>
