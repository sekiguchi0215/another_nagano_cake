<div class="row row-new">
	<h2>商品新規登録</h2><br>

	<%= form_for(@item, url: admin_items_path) do %>
		<div class="col-xs-4">
			<div class="item-image">
				<%= attachment_image_tag @item, :image, class: "img-square", fallback: "no_image.jpg", size: "300x300" %>
			</div><br>
			<%= f.attachment_field :image, placeholder: "商品画像" %>
		</div>

		<div class="col-xs-8">
			<form>
				<div class="new-field">
					<h4>
						<%= f.label :item_name, "商品名", class: "col-xs-3" %>
						<%= f.text_field :item_name, autofocus: true, autocomplete: "item_name", class: "col-xs-8" %>
					</h4>
				</div>
				<div class="new-field">
					<h4>
						<%= f.label :explanation, "商品説明", class: "col-xs-3" %>
						<%= f.text_area :explanation, autocomplete: "explanation", class: "col-xs-8" %>
					</h4>
				</div>
				<div class="new-field">
					<h4>
						<%= f.label :genre_id, "ジャンル", class: "col-xs-3 fix" %>
						<%= f.collection_select :genre_id, Genre.all, :id, :name %>
						<!-- f.collection_select(プロパティ名, オブジェクトの配列, value属性の項目, 表示テキストの項目) -->
						<!-- Genre.allでジャンルテーブル内の情報を持ってきている -->
					</h4>
				</div>
				<div class="new-field">
					<h4>
						<%= f.label :unit_price_without_tax, "税抜価格", class: "col-xs-3 block" %>
						<%= f.text_field :unit_price_without_tax, autocomplete: "unit_price_without_tax", class: "col-xs-8" %>
					</h4>
				</div>
				<div class="new-field">
					<h4>
						<%= f.label :sale_status, "販売ステータス", class: "col-xs-3 fix" %>
						<%= f.select :sale_status, ["販売中", "販売停止"], class: "btn btn-primary" %>
					</h4>
				</div>
				<div class="text-right">
					<%= f.submit "商品登録", class: "btn btn-primary" %>
				</div>
			</form>
		</div>
	<% end %>
</div>








