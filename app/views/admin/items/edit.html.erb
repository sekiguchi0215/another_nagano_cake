<h2 class="edit-title">商品編集</h2>

<%= form_for(@item, url: admin_item_path) do |f| %>
	<div class="row">
		<div class="col-xs-4">
			<%= attachment_image_tag @item, :image, size: "300x300", fallback: "no_image.jpg" %><br>
			<label>Image</label>
			<%= f.attachment_field :image %>
		</div>

		<div class="col-xs-8">
			<h4 class="edit-sukima">
				<%= f.label :item_name, "商品名", class: "col-xs-3" %>
				<%= f.text_field :item_name, class: "col-xs-8" %>
			</h4>
			<h4 class="edit-sukima">
				<%= f.label :explanation, "商品説明", class: "col-xs-3" %>
				<%= f.text_field :explanation, size: "5x10", class: "col-xs-8", style: "margin-bottom: 30px;" %>
			</h4>
			<h4 class="edit-sukima">
				<%= f.label :genre_id, "ジャンル", class: "col-xs-3" %>
				<%= f.collection_select :genre_id, Genre.all, :id, :name %>
			</h4>
			<h4 class="edit-sukima">
				<%= f.label :unit_price_without_tax, "税抜価格", class: "col-xs-3" %>
				<%= f.text_field :unit_price_without_tax, class: "col-xs-5" %>円
			</h4>
			<h4 class="edit-sukima">
				<%= f.label :sale_status, "販売ステータス", class: "col-xs-3" %>
				<%= f.select :sale_status, ["販売中", "販売停止"], class: "col-xs-8" %>
			</h4>
			<div>
				<%= f.submit "変更を保存", class: "btn btn-primary" %>
			</div>
		</div>
	</div>
<% end %>